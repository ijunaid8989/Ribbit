<% if current_user %>
	<%= render "ribbits/new_form" %>
<% end -%>
<div id="ribbits" class="panel left">
	<h1>Mention Ribbits</h1>
	<% @ribbits.each do |ribbit| %>
	<div class="ribbitWrapper">
		<img class="avatar" src="<%= ribbit.user.avatar_url %>">
			<span class="name"><%= link_to ribbit.user.name , ribbit.user %></span> @<%= ribbit.user.username %> 
			<span class="time"><%= time_ago_in_words(ribbit.created_at) %></span>
			<p>
				<%= ribbit.content %>
			</p>
	</div>
	<% end -%>				
</div>

<%= javascript_include_tag "ribbits" %>